<Window x:Class="ModelConverter.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ViewWindow" Height="405" Width="496">
    <Grid>
        <Viewport3D Name="modelVieport">
            <Viewport3D.Camera>
                <PerspectiveCamera FarPlaneDistance="1000000"
	                               LookDirection="-50000,-50000,-50000"
	                               UpDirection="0,1,0"
	                               NearPlaneDistance="1" 
	                               Position="50000,50000,50000" 
	                               FieldOfView="70" />
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="-1,-1,-3" />
                </ModelVisual3D.Content>
            </ModelVisual3D>    
        </Viewport3D>
    </Grid>
</Window>
